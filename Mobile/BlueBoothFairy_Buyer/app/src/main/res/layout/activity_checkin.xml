<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_buyer_reg">

    <TextView
        android:text="Awesome!\nYou're now checked in!"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textAlignment="center"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="24sp"
        android:textStyle="normal|bold" />

    <ImageView
        android:layout_width="327dp"
        android:src="@drawable/img_skipline"
        android:id="@+id/imageView3"
        android:layout_marginStart="32dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginEnd="32dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        android:layout_height="230dp"
        android:layout_marginTop="8dp" />

    <TextView
        android:text="No need to fall in line. Blue Booth Fairy has automatically checked you in Manila Fame."
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:id="@+id/textView6"
        android:textAlignment="center"
        android:textColor="@color/text_hint"
        app:layout_constraintRight_toRightOf="@+id/imageView3"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView3"
        app:layout_constraintLeft_toLeftOf="@+id/imageView3" />

    <TextView
        android:text="Please proceed to the Quick Lane and claim your freebies."
        android:id="@+id/textView7"
        android:textAlignment="center"
        android:textColor="@color/textPrimary"
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/textView8"
        android:layout_marginBottom="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/btn_claimfreebie"
        app:layout_constraintRight_toRightOf="@+id/btn_claimfreebie" />

    <TextView
        android:text="you can only press this once"
        android:id="@+id/textView8"
        android:textAlignment="center"
        android:textColor="@color/textPrimary"
        android:layout_width="wrap_content"
        android:textSize="12sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/btn_claimfreebie"
        android:layout_marginBottom="16dp" />

    <Button
        android:text="I have claimed my freebies"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/btn_claimfreebie"
        android:background="@drawable/custom_button"
        android:textSize="14sp"
        android:textColor="@color/custom_button_textcolor"
        android:layout_marginStart="32dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginEnd="32dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        android:padding="12dp" />
</android.support.constraint.ConstraintLayout>