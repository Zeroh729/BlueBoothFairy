<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_merch"
    xmlns:tools="http://schemas.android.com/tools">


    <View
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="0dp"
        android:id="@+id/ripple_bg"
        android:elevation="1dp"
        android:layout_height="0dp"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintBottom_toTopOf="@+id/tv_label"
        android:layout_marginBottom="80dp" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_image2"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:src="@color/primaryDark2"
        app:civ_border_width="4dp"
        android:elevation="7dp"
        app:civ_border_color="@android:color/white"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/ripple_bg"
        app:layout_constraintVertical_bias="0.35000002" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_placeholder"
        android:elevation="7dp"
        app:layout_constraintTop_toTopOf="@+id/iv_image"
        app:layout_constraintBottom_toBottomOf="@+id/iv_image2"
        app:layout_constraintRight_toRightOf="@+id/iv_image"
        app:layout_constraintLeft_toLeftOf="@+id/iv_image2"
        android:text=""
        android:textColor="@color/textPrimary" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_image"
        android:layout_width="130dp"
        android:layout_height="130dp"
        app:civ_border_width="4dp"
        app:civ_border_color="@android:color/white"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/ripple_bg"
        android:elevation="8dp"
        app:layout_constraintVertical_bias="0.35000002" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_ripple"
        android:elevation="6dp"
        app:layout_constraintLeft_toLeftOf="@+id/iv_image"
        app:layout_constraintRight_toRightOf="@+id/iv_image"
        app:layout_constraintTop_toTopOf="@+id/iv_image"
        app:layout_constraintBottom_toBottomOf="@+id/iv_image"
        android:layout_width="600dp"
        android:layout_height="600dp" />

    <TextView
        android:text="Nearby buyers see you as"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_label"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/tv_exhibitorname"
        android:layout_marginBottom="8dp"
        android:textColor="@color/primaryDark2" />

    <TextView
        android:text="Voila! Jars Plc Inc."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_exhibitorname"
        android:textSize="30sp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:gravity="center_horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="90dp"
        android:textColor="@color/primaryDark2"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp" />

    <TextView
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:id="@+id/tv_status"
        android:textColor="@color/textPrimary"
        android:textSize="24sp"
        app:layout_constraintLeft_toLeftOf="@+id/ripple_bg"
        app:layout_constraintRight_toRightOf="@+id/ripple_bg"
        android:textAlignment="center"
        android:layout_marginTop="32dp"
        android:elevation="8dp"
        app:layout_constraintTop_toBottomOf="@+id/iv_image" />

</android.support.constraint.ConstraintLayout>
